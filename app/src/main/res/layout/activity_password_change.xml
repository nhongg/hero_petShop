<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Mật khẩu hiện tại -->
    <EditText
        android:id="@+id/edtCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu hiện tại"
        android:inputType="textPassword"
        android:importantForAccessibility="yes"
        android:contentDescription="Mật khẩu hiện tại"/>

    <!-- Mật khẩu mới -->
    <EditText
        android:id="@+id/edtNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:importantForAccessibility="yes"
        android:contentDescription="Mật khẩu mới"/>

    <!-- Xác nhận mật khẩu mới -->
    <EditText
        android:id="@+id/edtConfirmNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Xác nhận mật khẩu mới"
        android:inputType="textPassword"
        android:importantForAccessibility="yes"
        android:contentDescription="Xác nhận mật khẩu mới"/>

    <!-- Nút Đổi mật khẩu -->
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:importantForAccessibility="yes"
        android:contentDescription="Nút đổi mật khẩu"/>

</LinearLayout>
