<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTenKhachHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên khách hàng"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtTenThuCung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên thú cưng"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtLoaiThuCung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại thú cưng"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtCanNang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cân nặng"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtThoiGian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtTrangThai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewServices"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp" />
</LinearLayout>
