<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="3dp"
    android:layout_marginEnd="10dp"
    android:elevation="3dp"
    android:padding="5dp"
    android:background="@drawable/cart_background"
    android:id="@+id/constraint_dong_danhgia">

    <de.hdodenhof.circleimageview.CircleImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_dong_danhgia"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pop_1"/>

    <TextView
        android:maxLines="1"
        android:singleLine="true"
        android:id="@+id/tv_name_dong_danhgia"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:text="title"
        android:textColor="#373b54"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_dong_danhgia"
        app:layout_constraintTop_toTopOf="@+id/img_dong_danhgia" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:text="Hạn sử dụng: "
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_dong_danhgia"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_dong_danhgia"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_hansudung_dong_danhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 năm"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_dong_danhgia"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng: "
        android:textColor="#373b54"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_dong_danhgia"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_number_dong_danhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="1"
        android:textColor="#373b54"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/soluong"
        app:layout_constraintStart_toEndOf="@+id/soluong"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_giatien_dong_danhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="0"
        android:textColor="#373b54"
        android:textSize="12sp"

        app:layout_constraintBottom_toBottomOf="@+id/tv_name_dong_danhgia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_dong_danhgia"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="VNĐ"
        android:textColor="#ff3d00"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_giatien_dong_danhgia"
        app:layout_constraintStart_toEndOf="@+id/tv_giatien_dong_danhgia"
        app:layout_constraintTop_toTopOf="@+id/tv_giatien_dong_danhgia"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_total_dong_danhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="0"
        android:textColor="#373b54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_number_dong_danhgia"
        app:layout_constraintEnd_toEndOf="@+id/tv_giatien_dong_danhgia"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="VNĐ"
        android:textColor="#ff3d00"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_total_dong_danhgia"
        app:layout_constraintStart_toEndOf="@+id/tv_total_dong_danhgia"
        app:layout_constraintTop_toTopOf="@+id/tv_total_dong_danhgia"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_dong_danhgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Đánh giá"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_dong_danhgia" />

</androidx.constraintlayout.widget.ConstraintLayout>